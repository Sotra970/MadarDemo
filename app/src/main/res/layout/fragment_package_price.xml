<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">




    <ScrollView
        android:layout_margin="16dp"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--// sec 1 header -->
                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/pack_value"
                    android:textColor="@color/black"
                    style="@style/text_semi_bold"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!--// radio buttons sec 1 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatRadioButton
                            android:checked="true"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:id="@+id/pack_value_rd1"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pack_value_rd1_text"
                            android:layout_gravity="center"
                            android:text="@string/pack_value_rd1"
                            android:textColor="@color/black"
                            style="@style/text_semi_bold"
                            android:textSize="@dimen/text_size_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pack_value_rd2_container"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatRadioButton
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:id="@+id/pack_value_rd2"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/pack_value_rd2_text"
                            android:layout_gravity="center"
                            android:text="@string/pack_value_rd2"
                            android:textColor="@color/grey_700"
                            style="@style/text_semi_bold"
                            android:textSize="@dimen/text_size_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <!--/// product price -->
                <LinearLayout
                    android:id="@+id/pack_value_sec"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pack_count_title"
                        android:paddingEnd="16dp"
                        android:layout_gravity="center"
                        android:text="@string/pack_value"
                        android:textColor="@color/grey_700"
                        style="@style/text_semi_bold"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:clickable="false"
                        android:tint="@color/grey_700"
                        android:id="@+id/count_plus"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/plus"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />


                    <EditText
                        android:enabled="false"
                        android:inputType="number"
                        android:id="@+id/pack_count_txt"
                        android:background="@drawable/gray_border"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/app_dark_indigo"
                        style="@style/text_semi_bold"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:clickable="false"
                        android:tint="@color/grey_700"
                        android:id="@+id/count_minus"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/minus"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />



                </LinearLayout>

                <TextView
                    android:id="@+id/pck_warn_text"
                    android:textColor="@color/grey_700"
                    android:text="@string/pck_warn"
                    style="@style/text_semi_bold"
                    android:textSize="@dimen/text_size_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--// sec 1 header -->
                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/payment_type"
                    android:textColor="@color/black"
                    style="@style/text_semi_bold"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <!--// radio buttons sec 1 -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatRadioButton
                            android:checked="true"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:id="@+id/credit_rd"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/credit_rd_text"
                            android:layout_gravity="center"
                            android:text="@string/credit"
                            android:textColor="@color/black"
                            style="@style/text_semi_bold"
                            android:textSize="@dimen/text_size_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatRadioButton
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:id="@+id/debit_rd"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/debit_text"
                            android:layout_gravity="center"
                            android:text="@string/debit"
                            android:textColor="@color/grey_700"
                            style="@style/text_semi_bold"
                            android:textSize="@dimen/text_size_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <include layout="@layout/pager_bullet_view"/>

            <LinearLayout
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:elevation="1dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/accent_rounded_button_layout_style"
                android:layout_marginTop="8dp"
                android:id="@+id/next"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/primary_text_view_style"
                    android:text="@string/text_save"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />


</android.support.v7.widget.CardView>