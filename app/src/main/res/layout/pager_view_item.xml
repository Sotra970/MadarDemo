<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pager_view_item_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pager_view_item_image_view"
            android:layout_marginBottom="16dp"
            android:tint="@color/app_dark_indigo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pager_view_item_text_view"
            android:textSize="@dimen/text_size_xlarge"
            style="@style/text_extra_bold"
            android:textColor="@color/app_dark_indigo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pager_view_item_sec_text_view"
            android:textSize="@dimen/text_size_small"
            style="@style/text_extra_bold"
            android:textColor="@color/app_dark_indigo"
            />

    </LinearLayout>



</FrameLayout>