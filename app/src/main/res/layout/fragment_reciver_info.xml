<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/container"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--// sec 1 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_weight="8"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/custom_image_edittext_compound_layout"
                            >

                            <ImageView
                                style="@style/custom_image_edittext_compound_imageview"
                                android:src="@drawable/profile_user"
                                />

                            <EditText
                                android:maxLines="1"
                                android:id="@+id/receiver_name_input"
                                style="@style/custom_image_edittext_compound_edittext"
                                android:hint="@string/receiver"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/custom_image_edittext_compound_layout"
                            >

                            <ImageView
                                style="@style/custom_image_edittext_compound_imageview"
                                android:src="@drawable/old_mobile_phone"
                                />

                            <EditText
                                android:maxLines="1"
                                android:inputType="phone"
                                android:id="@+id/phone_number_input"
                                style="@style/custom_image_edittext_compound_edittext"
                                android:hint="@string/hint_phone_number"
                                />
                        </FrameLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_marginEnd="4dp"
                                >

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    style="@style/custom_image_edittext_compound_layout"
                                    >

                                    <ImageView
                                        style="@style/custom_image_edittext_compound_imageview"
                                        android:src="@drawable/home_icon"
                                        />



                                    <LinearLayout
                                        android:paddingBottom="8dp"
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <Spinner
                                            android:id="@+id/city_spiner"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/transparent"
                                            android:clickable="true"
                                            android:paddingEnd="24dp"
                                            android:paddingStart="24dp"
                                            android:spinnerMode="dialog" />
                                        <View
                                            android:background="@color/grey_400"
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"/>
                                    </LinearLayout>

                                    <ImageView
                                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                                        android:layout_gravity="bottom|end"
                                        android:padding="0dp"
                                        style="@style/custom_image_edittext_compound_imageview"/>


                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="4dp"
                                >

                                <FrameLayout android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    style="@style/custom_image_edittext_compound_layout"
                                    >

                                    <ImageView
                                        style="@style/custom_image_edittext_compound_imageview"
                                        android:src="@drawable/home_icon"
                                        />

                                    <EditText
                                        android:id="@+id/district_input"
                                        style="@style/custom_image_edittext_compound_edittext"
                                        android:hint="@string/hint_street"
                                        android:maxLines="1"
                                        android:imeOptions="actionNext"
                                        />

                                </FrameLayout>

                            </LinearLayout>

                        </LinearLayout>


                        <FrameLayout
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/custom_image_edittext_compound_layout"
                            >

                            <ImageView
                                style="@style/custom_image_edittext_compound_imageview"
                                android:src="@drawable/road"
                                />

                            <EditText
                                android:maxLines="1"
                                android:id="@+id/street_input"
                                style="@style/custom_image_edittext_compound_edittext"
                                android:hint="@string/street_name"
                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/custom_image_edittext_compound_layout"
                            >

                            <ImageView
                                style="@style/custom_image_edittext_compound_imageview"
                                android:src="@drawable/home_icon"
                                />

                            <EditText
                                android:maxLines="1"
                                android:id="@+id/building_number"
                                style="@style/custom_image_edittext_compound_edittext"
                                android:hint="@string/building"
                                android:imeOptions="actionDone"
                                />
                        </FrameLayout>



                        <android.support.v7.widget.CardView
                            android:minHeight="48dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/app_yellow_3"
                            app:cardCornerRadius="24dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <android.support.design.widget.TabLayout
                                app:tabMode="fixed"
                                app:tabGravity="fill"
                                android:id="@+id/tab_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:outlineProvider="background"
                                app:tabTextColor="@color/white"
                                app:tabSelectedTextColor="@color/colorAccent"
                                app:tabIndicatorHeight="0dp"
                                app:tabBackground="@drawable/tab_color_selector"
                                app:tabIndicatorColor="@color/white"
                                />
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <!--// sec 2-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey_50"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"/>




            </LinearLayout>

        </ScrollView>



        <!--// sec 3 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/pager_bullet_view"/>

            <LinearLayout
                android:background="@color/white"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_weight="8"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:elevation="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/dark_indigo"
                        android:id="@+id/cancel"
                        >
                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/primary_text_view_style"
                            android:text="@string/back"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/accent_rounded_layout_style"
                        android:id="@+id/next"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/primary_text_view_style"
                            android:text="@string/next"
                            />
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/progressView"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

</android.support.v7.widget.CardView>